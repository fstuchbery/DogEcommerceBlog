<!-- app/views/cart/show.html.erb is to show the cart summary and hopefully attach a user to the order -->
<h1>Your Cart</h1>

<% if @cart_items.empty? %>
  <p>Your cart is empty!</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |item| %>
        <tr>
          <td><%= item[:product].product_name %></td>
          <td><%= number_to_currency(item[:product].price) %></td>
          <td><%= item[:quantity] %></td>
          <td><%= number_to_currency(item[:product].price * item[:quantity]) %></td>
          <td>
            <%= button_to 'Remove', remove_from_cart_path(product_id: item[:product].id), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3>Total: <%= number_to_currency(@cart_items.sum { |item| item[:product].price * item[:quantity] }) %></h3>

  
<% end %>
