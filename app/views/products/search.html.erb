<%= form_with url: search_products_path, method: :get, local: true do %>
    <div>
      <%= label_tag :search, "Search products by keyword" %>
      <%= text_field_tag :search, params[:search], placeholder: "Search by name or description" %>
    </div>
  
    <div>
      <%= label_tag :category_id, "Select Category" %>
      <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :category_name, params[:category_id]), prompt: "All Categories" %>
    </div>
  
    <div>
      <%= submit_tag "Search" %>
    </div>
  <% end %>
  
  <h2>Search Results</h2>
  <ul>
    <% @products.each do |product| %>
      <li>
        <%= product.product_name %> - <%= product.category.category_name %> - <%= product.description %>
      </li>
    <% end %>
  </ul>
  