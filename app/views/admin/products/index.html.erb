<h1>Products</h1>
<%= link_to 'New Product', new_admin_product_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.stock_quantity %></td>
        <td>
          <%= link_to 'Edit', edit_admin_product_path(product) %> |
          <%= form_with url: destroy_admin_product_path(product), method: :delete, data: { confirm: 'Are you sure you want to delete this product?' } do |form| %>
  <%= form.submit 'Delete' %>
<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
